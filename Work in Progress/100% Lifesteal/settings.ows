rule("Rule 1")
{
	event
	{
		Player Dealt Damage;
		All;
		All;
	}

	conditions
	{
		Victim != Event Player;
	}

	actions
	{
		Heal(Event Player, Null, Event Damage);
	}
}

rule("Rule 2")
{
	event
	{
		Ongoing - Global;
	}

	conditions
	{
		Is Assembling Heroes == True;
	}

	actions
	{
		Set Match Time(15);
	}
}

rule("Rule 3")
{
	event
	{
		Ongoing - Each Player;
		All;
		All;
	}

	actions
	{
		Set Healing Dealt(Event Player, 0);
	}
}

rule("Rule 4")
{
	event
	{
		Player Dealt Final Blow;
		All;
		All;
	}

	conditions
	{
		Is Dead(Event Player) == True;
		Event Player.A != Null;
	}

	actions
	{
		Resurrect(Event Player);
	}
}

rule("Rule 5")
{
	event
	{
		Player Died;
		All;
		All;
	}

	actions
	{
		Event Player.A = Attacker;
	}
}